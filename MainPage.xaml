<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTime.MainPage" x:Name="pgContent">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30"
            VerticalOptions="Center">
            
            <Label x:Name="lblDisplay" Text="Break Time" FontSize="Title" HorizontalOptions="Center"/>

            <Button x:Name="takeFive" Text="Take 5" Clicked="TakeFive_OnClicked"/>
            <Button x:Name="takeTen" Text="Take 10" Clicked="TakeTen_OnClicked"/>
            <Button x:Name="takeFifteen" Text="Take 15" Clicked="TakeFifteen_OnClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
